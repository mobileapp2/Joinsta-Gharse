<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_countrycode_mobile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:gravity="center"
        android:onClick="selectContryCodeBiz"
        android:text="+91"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="0.7dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/mediumGray" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_mobile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.75"
        android:hint="Mobile"
        android:inputType="number"
        android:maxLength="14"
        android:textSize="16sp"
        app:met_floatingLabel="highlight"
        app:met_textColorHint="@color/darkGray"
        app:met_underlineColor="@color/mediumGray" />

    <ImageButton
        android:id="@+id/ib_remove_mobile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end"
        android:layout_weight="0.1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:onClick="removeMobileLayoutBiz"
        android:src="@drawable/icon_cross"
        android:tint="@color/black" />

</LinearLayout>
